<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="expires" content="0">
    <title>@ViewBag.Title - Swap Deal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img alt="Brand" src="https://bc.swap.com.bd/admin/dist/img/logo.png" width="25" height="25">
                </a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Swap Deal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["user_id"] != null)
                    {
                        <li>@Html.ActionLink("Manage Profile", "Details", "Users")</li>
                        <li>@Html.ActionLink("Search Ads", "Ads", "Advertisements")</li>
                        <li>@Html.ActionLink("Post Ad", "Create", "Advertisements")</li>
                        <li>@Html.ActionLink("Your Ads", "PostedAds", "Advertisements")</li>
                        <li>@Html.ActionLink("Booked Ads", "BookedAds", "Bookings")</li>
                        <li>@Html.ActionLink("Finished Deals", "Index", "Deals")</li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Messages", "Create", "Messages")</li>
                        <li>@Html.ActionLink("Log out", "Logout", "Users")</li>


                    }
                    else if (Session["admin"] != null)
                    {
                        <li>@Html.ActionLink("Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("Ads", "Index", "Advertisements")</li>
                        <li>@Html.ActionLink("Bookings", "Index", "Bookings")</li>
                        <li>@Html.ActionLink("Finished Deals", "Index", "Deals")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Revenue", "Revenue", "Deals")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Messages")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Admins")</li>

                    }
                    else
                    {

                        <li>@Html.ActionLink("Sign In", "Login", "Users")</li>
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Users")</li>
                        <li>@Html.ActionLink("Search Ads", "Ads", "Advertisements")</li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Swap Deal @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
