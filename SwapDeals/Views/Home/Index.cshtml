@model IEnumerable<SwapDeals.Models.Advertisement>
@{
    ViewBag.Title = "Home Page";
}

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/images/background/slider1.jpeg" alt="Phones" style="height: 500px;">
            </div>

            <div class="item">
                <img src="~/Content/images/background/slider2.jpeg" alt="Laptops" style="height: 500px;">
            </div>

            <div class="item">
                <img src="~/Content/images/background/slider3.jpeg" alt="Pc" style="height: 500px;">
            </div>
            <div class="item">
                <img src="~/Content/images/background/slider4.jpeg" alt="Pc" style="height: 500px;">
            </div>
            <div class="item">
                <img src="~/Content/images/background/slider5.jpeg" alt="Pc" style="height: 500px;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
 </div>


    <div class="policy-area" style="padding: 40px 0; background-image: linear-gradient(to right, rgba(70,190,146, .5), rgba(47, 71, 131, 0.466));">
        <div class="container">
            <div class="policy-tag">
                <h2 style="text-align: center; background-color: #243665; outline: #41be92 solid 3px; position: relative; padding: 5px 15px; margin-right: 12%; color: #fff; margin-bottom: 30px; display: inline-block; font-family: tahoma;">Our Policy</h2>
            </div>
            
            <div class="row">
       
                <div class="col-md-3 col-12">
                    <div class="feature_box" style="text-align: center; margin-top: 10px;">
                        <img src="~/Content/images/icon/shipped.png" class="feature_image" style="height: 100px; width: 100px; border-radius: 100%; margin: 20px;">
                        <h6 style="padding: 0px 20px; font-family: tahoma; font-weight: 800;">Free Shipping</h6>
                        <p style=" padding: 0px 20px; font-family: Poppins; font-weight: 500; font-size: 14px;">Free shipping in Dhaka</p>
                    </div>
                </div>
          
                <div class="col-md-3 col-12">
                    <div class="feature_box" style="text-align: center; margin-top: 10px;">
                        <img src="~/Content/images/icon/support.png" class="feature_image" style="height: 100px; width: 100px; border-radius: 100%; margin: 20px;">
                        <h6 style="padding: 0px 20px; font-family: tahoma; font-weight: 800;">Support 24/7</h6>
                        <p style=" padding: 0px 20px; font-family: Poppins; font-weight: 500; font-size: 14px;">Contact us 24 hours a day</p>
                    </div>
                </div>
        
                <div class="col-md-3 col-12">
                    <div class="feature_box" style="text-align: center; margin-top: 10px;">
                        <img src="~/Content/images/icon/return.png" class="feature_image" style="height: 100px; width: 100px; border-radius: 100%; margin: 20px;">
                        <h6 style="padding: 0px 20px; font-family: tahoma; font-weight: 800;">20 Days Return</h6>
                        <p style=" padding: 0px 20px; font-family: Poppins; font-weight: 500; font-size: 14px;">If Products have problems</p>
                    </div>
                </div>
           
                <div class="col-md-3 col-12">
                    <div class="feature_box" style="text-align: center; margin-top: 10px;">
                        <img src="~/Content/images/icon/credit-card.png" class="feature_image" style="height: 100px; width: 100px; border-radius: 100%; margin: 20px;">
                        <h6 style="padding: 0px 20px; font-family: tahoma; font-weight: 800;">Payment Secure</h6>
                        <p style=" padding: 0px 20px; font-family: Poppins; font-weight: 500; font-size: 14px;">We ensure secure payment</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hot-product">
        <div class="container">
            <div class="all-tag">
                <h2>Featured Ads</h2>
            </div>
            <div class="row">
                @foreach (var ad in Model)
                {
                    if (Convert.ToInt32(Session["user_id"]) != ad.UserID)
                    {
                    <div class="col-md-4">
                        <div class="hot-item-top">
                            <img src="@Url.Content(ad.Images)" class="img-fluid" alt="pic">
                            <div class="hot-overlay">
                                @if (Session["user_id"] == null)
                                {
                                    
                                    <input type="button" value="Details" class="btn btn-primary" onclick="alert('Login to continue')" />

                                }
                                else
                                {

                                    <input type="button" value="Details" class="btn btn-primary" onclick="location.href = '@Url.Action("Details/" + ad.AdID, "Advertisements")'" />


                                }

                            </div>
                        </div>
                        <div class="hot-item-bottom">
                            <h5>Selling @ad.SellingProduct</h5>
                            <h6>Want @ad.TargatedProduct</h6>
                        </div>
                    </div>
                    }
                }

            </div>
           
        </div>
    </div>